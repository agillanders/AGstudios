@section Scripts {
    <script>
        $(function () {
            $(".webbuttons").click(function () {
                //alert('#' + this.id + '.webpanel');
                var tableObjectName = '#' + this.id + '.webpanel';
                var btnObjectName = '#' + this.id + '.webbuttons';

                $(".webpanel").addClass("inactive");
                $(tableObjectName).removeClass("inactive");
                $(".webbuttons").removeClass("active");
                $(btnObjectName).addClass("active");
            });
        });
    </script>

    <script>
        var myVideo = document.getElementById("video1");

        function playPause() {
            if (myVideo.paused)
                myVideo.play();
            else
                myVideo.pause();
        }

        function makeBig() {
            myVideo.width = 600;
        }

        function makeSmall() {
            myVideo.width = 300;
        }

        function makeNormal() {
            myVideo.width = 450;
        }
    </script>
}