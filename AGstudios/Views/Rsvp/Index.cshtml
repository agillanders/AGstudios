
@{
    ViewBag.Title = "Index";
}

<div class="d-row voffset4" ng-app="myApp" ng-controller="mainCtrl">
    <div class="d-column">
        <div class="container voffset4">
            <div class="rsvp-box">
                <h1>RSVP</h1>
                @if (User.IsInRole("Admin"))
                {
                    <form id="registrar">
                        <div class="search">
                            <div class="input-group">
                                <input type="text" class="form-control" id="input" placeholder="Add Invite..." ng-model="name">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-ok"></i></button>
                                </span>
                            </div><!-- /input-group -->
                        </div>
                    </form>
                }
            </div>
            <div class="rsvp-display">
                <ul id="invitedList">
                    <li>{{name}}</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/Scripts/angular.min.js"></script>
    <script>
        var app = angular.module('myApp', []);
        app.controller('mainCtrl', function ($scope) {
            $scope.name = "";
        });
    </script>
}